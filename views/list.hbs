{{#each dinosaurs}}
<div class="w-full lg:flex">
  <div class="h-48 lg:h-auto lg:w-48 flex-none bg-cover rounded-t lg:rounded-t-none lg:rounded-l text-center overflow-hidden" style="background-image: url('{{ this.img }}')" title="Woman holding a mug">
  </div>
  <div class="border-r border-b border-l border-gray-400 lg:border-l-0 lg:border-t lg:border-gray-400 bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal">
    <div class="mb-8">
      <div class="text-gray-900 font-bold text-xl mb-2">{{this.name}}</div>
      <p class="text-gray-700 text-base">{{this.sciname}}</p>
    </div>
    <div class="flex items-center">
      <div class="text-sm">
        <p class="text-gray-900 leading-none">Height: {{this.height}} metres</p>
        <p class="text-gray-900">Weight: {{this.weight}} kilos</p>
      </div>
    </div>
  </div>
</div>
{{/each}}